# Server Configuration

NODE_ENV=development
PORT=5000
HOST=localhost

# Database Configuration

MONGODB_URI=mongodb://localhost:27017/wastesort-ai
MONGODB_TEST_URI=mongodb://localhost:27017/wastesort-ai-test

# Authentication

JWT_SECRET=your-super-secure-jwt-secret-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-token-secret
JWT_REFRESH_EXPIRE=30d
BCRYPT_ROUNDS=12

# CORS Settings

FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload

UPLOAD_PATH=./uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# AI Model Configuration

MODEL_PATH=./models
MODEL_VERSION=1.0.0
AI_CONFIDENCE_THRESHOLD=0.5
AI_PROCESSING_TIMEOUT=30000

# Redis Configuration (for caching and sessions)

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
SESSION_SECRET=your-session-secret-key

# Email Configuration

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=WasteSortAI [noreply@wastesort.ai](mailto:noreply@wastesort.ai)

# External APIs

GOOGLE_VISION_API_KEY=
AZURE_COMPUTER_VISION_KEY=
AZURE_COMPUTER_VISION_ENDPOINT=

# Logging

LOG_LEVEL=debug
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Rate Limiting

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=true

# Security

HELMET_CSP_ENABLED=true
TRUST_PROXY=false
SECURE_COOKIES=false

# Analytics

GOOGLE_ANALYTICS_ID=
ENABLE_ANALYTICS=false

# Monitoring

SENTRY_DSN=
ENABLE_SENTRY=false

# Background Jobs

ENABLE_CRON_JOBS=true
CLEANUP_INTERVAL=0 2 * * *
BACKUP_INTERVAL=0 3 * * 0

# Performance

COMPRESSION_ENABLED=true
COMPRESSION_THRESHOLD=1024
STATIC_CACHE_MAX_AGE=86400

# Database Pool Settings

DB_POOL_MIN=5
DB_POOL_MAX=10
DB_POOL_ACQUIRE_TIMEOUT=60000
DB_POOL_IDLE_TIMEOUT=10000

# Socket.IO Configuration

SOCKET_CORS_ORIGIN=http://localhost:3000
SOCKET_TRANSPORTS=websocket,polling

# Development Settings

DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_MORGAN_LOGGING=true

# Production Settings (uncomment for production)

# NODE_ENV=production

# PORT=5000

# HOST=0.0.0.0

# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wastesort-ai

# JWT_SECRET=your-production-jwt-secret

# FRONTEND_URL=https://wastesort.ai

# SECURE_COOKIES=true

# TRUST_PROXY=true

# LOG_LEVEL=error

# DEBUG_MODE=false

# ENABLE_SWAGGER=false

# Docker Configuration

DOCKER_DB_HOST=mongo
DOCKER_REDIS_HOST=redis

# Backup Configuration

BACKUP_PATH=./backups
S3_BUCKET_NAME=wastesort-ai-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Health Check

HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_TIMEOUT=5000

# API Versioning

API_VERSION=v1
DEPRECATION_WARNING=false

# Feature Flags

ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=false
ENABLE_2FA=false
ENABLE_ANALYTICS_TRACKING=true
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_OFFLINE_MODE=true

# Third-party Integrations

STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
SENDGRID_API_KEY=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# Localization

DEFAULT_LANGUAGE=th
SUPPORTED_LANGUAGES=th,en
TIMEZONE=Asia/Bangkok

# Cache Settings

CACHE_TTL=3600
CACHE_PREFIX=wastesort:
CACHE_ENABLED=true